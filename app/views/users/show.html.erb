<section>
<h3 style="margin: 10px;text-align:center;border-bottom: 2px solid black">Detaile's of user</h3>

<%user_search = @user_search%>
<% if user_search.nil? %>
 <p>Not user list found</p>
<%else%>
<div>
   <div class="card mb-3" style="margin-top: 20px">
    <div class="row g-0">
      <div class="col-md-4">
       <img src="<%= user_search.photo %>" class="img-fluid rounded-start" alt=<%= user_search.name %> >
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= user_search.name %></h5>
          <p class="card-text float-left"><small class="text-muted float-left">Number of Post: <%= user_search.posts_counter %></small></p>
        </div>
      </div>
    </div>
</div>
<% end %>
<div class="container border rounded" style="margin-left: -10px">
<h2>Bio</h3>
<div><%= @user_search.bio %></div>
</div>

<div>
<% user_search.three_most_recent_posts.each do |post| %>
  <div>
    <div class="container border rounded" style="margin-top: 5px">
      <h2> <%= post.title %> </h2> 
      <p><%= post.text %></p>
      <div>
        <p>Comment: <%= post.comments_counter %>: Like :<%= post.likes_counter %></p>
      </div>
    </div>
  </div>
<%end%>


</div>
<div class="container" style="margin-top: 5px">
    <%= link_to "See all posts", user_posts_path(user_id: @user_search.id), class:"btn btn-secondary" %>
</div>
</section>